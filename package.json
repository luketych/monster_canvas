{
  "name": "file-drawer",
  "displayName": "File Drawer",
  "description": "Draw on a canvas for each file or folder in your project",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:fileDrawer.fileExplorer"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "file-drawer",
          "title": "File Drawer",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "file-drawer": [
        {
          "id": "fileDrawer.fileExplorer",
          "name": "Files"
        },
        {
          "id": "fileDrawer.drawingCanvas",
          "name": "Drawing Canvas",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "fileDrawer.openDrawingCanvas",
        "title": "Open Drawing Canvas"
      },
      {
        "command": "fileDrawer.openFileExplorer",
        "title": "File Drawer: Open File Explorer"
      },
      {
        "command": "fileDrawer.focusDrawingCanvas",
        "title": "File Drawer: Focus Drawing Canvas"
      },
      {
        "command": "fileDrawer.openFileDetails",
        "title": "File Drawer: Open File Details"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js",
    "watch": "node --watch ./src/extension.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  }
}