{
  "name": "file-drawer",
  "displayName": "File Drawer",
  "description": "Draw on a canvas for each file or folder in your project",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:fileDrawer.fileExplorer"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "file-drawer",
          "title": "File Drawer",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "file-drawer": [
        {
          "id": "fileDrawer.fileExplorer",
          "name": "Files"
        },
        {
          "id": "fileDrawer.drawingCanvas",
          "name": "Drawing Canvas",
          "type": "webview"
        },
        {
          "id": "fileDrawer.depthView",
          "name": "Depth Viewer",
          "type": "webview",
          "when": "fileDrawer.depthViewLocation == sidebar"
        }
      ]
    },
    "configuration": {
      "title": "File Drawer",
      "properties": {
        "fileDrawer.depthViewLocation": {
          "type": "string",
          "enum": [
            "editor",
            "sidebar"
          ],
          "default": "editor",
          "description": "Location of the Depth Viewer (editor or sidebar)",
          "enumDescriptions": [
            "Show Depth Viewer in the main editor area",
            "Show Depth Viewer in the File Drawer sidebar"
          ]
        },
        "fileDrawer.depthViewMaxHeight": {
          "type": "number",
          "default": 200,
          "description": "Maximum height of each item in the Depth Viewer (in pixels)",
          "minimum": 100,
          "maximum": 500
        },
        "fileDrawer.depthViewShowStickers": {
          "type": "boolean",
          "default": true,
          "description": "Show stickers in the Depth Viewer"
        },
        "fileDrawer.depthViewShowCover": {
          "type": "boolean",
          "default": true,
          "description": "Show cover images in the Depth Viewer"
        }
      }
    },
    "commands": [
      {
        "command": "fileDrawer.openDrawingCanvas",
        "title": "Open Drawing Canvas"
      },
      {
        "command": "fileDrawer.openFileExplorer",
        "title": "File Drawer: Open File Explorer"
      },
      {
        "command": "fileDrawer.focusDrawingCanvas",
        "title": "File Drawer: Focus Drawing Canvas"
      },
      {
        "command": "fileDrawer.openFileDetails",
        "title": "File Drawer: Open File Details"
      },
      {
        "command": "workbench.view.extension.file-drawer",
        "title": "File Drawer: Toggle Sidebar"
      },
      {
        "command": "fileDrawer.openDepthView",
        "title": "File Drawer: Open Depth View"
      },
      {
        "command": "fileDrawer.setSidebarMode",
        "title": "File Drawer: Set Depth View to Sidebar Mode"
      }
    ],
    "keybindings": [
      {
        "command": "workbench.view.extension.file-drawer",
        "key": "shift+cmd+y",
        "mac": "shift+cmd+y",
        "when": "!sidebarVisible || viewContainerVisible == false"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js",
    "watch": "node --watch ./src/extension.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  }
}